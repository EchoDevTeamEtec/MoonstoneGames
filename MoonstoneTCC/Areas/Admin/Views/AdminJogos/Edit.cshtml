@model MoonstoneTCC.Models.Jogo

@{
    ViewData["Title"] = "Editar Jogo";
}

<div class="text-center mb-4" style="background: linear-gradient(90deg, #6a0dad 0%, #3c006e 50%, #2b003f 100%); padding: 20px; display: flex; justify-content: space-between; align-items: center;">
    <h1 class="text-white" style="margin: 0;">EDITAR JOGO</h1>
    <div style="padding: 10px 20px; border-radius: 10px; display: flex; align-items: center; gap: 15px; background-color: #f1f1f1; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
        <h5 class="text-dark" style="margin: 0;">ID: @Model.JogoId</h5>
        <h5 class="text-dark" style="margin: 0;">Nome: @Model.Nome</h5>
    </div>
</div>






<h4>Detalhes do Jogo</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-10">
        <form asp-action="Edit" class="p-4 border rounded bg-light">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="JogoId" />

            <!-- Primeira Linha -->
            <div class="row mb-4">
                <div class="form-group col-md-4">
                    <label asp-for="Nome" class="control-label d-flex align-items-center">
                        <i class="fas fa-gamepad me-2 text-primary" style="font-size: 1.5rem;"></i>
                        <span>Nome</span>
                    </label>
                    <input asp-for="Nome" class="form-control border-primary" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Preco" class="control-label d-flex align-items-center">
                        <i class="fas fa-dollar-sign me-2 text-success" style="font-size: 1.5rem;"></i>
                        <span>Preço</span>
                    </label>
                    <input asp-for="Preco" class="form-control border-success" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Plataformas" class="control-label d-flex align-items-center">
                        <i class="fas fa-laptop me-2 text-info" style="font-size: 1.5rem;"></i>
                        <span>Plataformas</span>
                    </label>
                    <input asp-for="Plataformas" class="form-control border-info" />
                    <span asp-validation-for="Plataformas" class="text-danger"></span>
                </div>
            </div>


            <!-- Segunda Linha -->
            <div class="row mb-4">
                <div class="form-group col-md-4">
                    <label asp-for="DescricaoCurta" class="control-label d-flex align-items-center">
                        <i class="fas fa-align-left me-2 text-warning" style="font-size: 1.5rem;"></i>
                        <span>Descrição Curta</span>
                    </label>
                    <input asp-for="DescricaoCurta" class="form-control border-warning" />
                    <span asp-validation-for="DescricaoCurta" class="text-danger"></span>
                </div>

                <div class="form-group col-md-8">
                    <label asp-for="DescricaoDetalhada" class="control-label d-flex align-items-center">
                        <i class="fas fa-book me-2 text-secondary" style="font-size: 1.5rem;"></i>
                        <span>Descrição Detalhada</span>
                    </label>
                    <textarea asp-for="DescricaoDetalhada" class="form-control border-secondary" rows="5"></textarea>
                    <span asp-validation-for="DescricaoDetalhada" class="text-danger"></span>
                </div>
            </div>



            <!-- Terceira Linha -->

            <div class="row mb-3">
                <div class="form-group col-md-4">
                    <label asp-for="ImagemUrl" class="control-label">
                        <i class="fas fa-image text-primary"></i> URL da Imagem
                    </label>
                    <input asp-for="ImagemUrl" class="form-control" />
                    <span asp-validation-for="ImagemUrl" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="ImagemThumbnailUrl" class="control-label">
                        <i class="fas fa-image text-success"></i> URL da Thumbnail
                    </label>
                    <input asp-for="ImagemThumbnailUrl" class="form-control" />
                    <span asp-validation-for="ImagemThumbnailUrl" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Genero" class="control-label">
                        <i class="fas fa-tags text-danger"></i> Gênero
                    </label>
                    <input asp-for="Genero" class="form-control" />
                    <span asp-validation-for="Genero" class="text-danger"></span>
                </div>
            </div>

            <br />
            
            <!-- Quarta Linha -->
            <div class="row mb-3">
                <div class="form-group col-md-4">
                    <label asp-for="ClassificacaoEtaria" class="control-label">
                        <i class="fas fa-user-check text-warning"></i> Classificação Etária
                    </label>
                    <input asp-for="ClassificacaoEtaria" class="form-control" />
                    <span asp-validation-for="ClassificacaoEtaria" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="ClassificacaoEtariaImagemUrl" class="control-label">
                        <i class="fas fa-image text-info"></i> URL Classificação
                    </label>
                    <input asp-for="ClassificacaoEtariaImagemUrl" class="form-control" />
                    <span asp-validation-for="ClassificacaoEtariaImagemUrl" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="InformacoesExtras" class="control-label">
                        <i class="fas fa-info-circle text-secondary"></i> Informações Extras
                    </label>
                    <textarea asp-for="InformacoesExtras" class="form-control"></textarea>
                    <span asp-validation-for="InformacoesExtras" class="text-danger"></span>
                </div>
            </div>


            <!-- Quinta Linha -->
            <div class="row mb-3">
                <div class="form-group col-md-4">
                    <label asp-for="ImagensAdicionais" class="control-label">
                        <i class="fas fa-images text-primary"></i> Imagens Adicionais
                    </label>
                    <input asp-for="ImagensAdicionais" class="form-control" />
                    <span asp-validation-for="ImagensAdicionais" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="CategoriaId" class="control-label">
                        <i class="fas fa-layer-group text-success"></i> Categoria
                    </label>
                    <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
            </div>


            <!-- Opções Adicionais -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="IsJogoPreferido" />
                        <label class="form-check-label">
                            <i class="fas fa-star text-warning"></i> Jogo Preferido
                        </label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="EmEstoque" />
                        <label class="form-check-label">
                            <i class="fas fa-box text-info"></i> Em Estoque
                        </label>
                    </div>
                </div>
            </div>


            <!-- Botões -->
            <div class="form-group text-center">
                <input type="submit" value="Salvar" class="btn btn-primary me-2" />
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Voltar à Lista
                </a>
            </div>

        </form>
    </div>
</div>
