@model MoonstoneTCC.Models.Categoria

@{
    ViewData["Title"] = "Excluir Categoria";
}

<!-- Título e Cabeçalho -->
<h1 class="page-title">EXCLUIR CATEGORIA</h1>

<h3 class="confirmation-title">Você tem certeza que deseja excluir a categoria @Model.CategoriaNome ?</h3>


<!-- Informações da Categoria -->
<div class="category-details">
    <h4 class="category-name"><i class="fas fa-trash-alt"></i> CATEGORIA</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 category-label">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class="col-sm-10 category-value">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
        <dt class="col-sm-2 category-label">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10 category-value">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
</div>

<!-- Formulário de Exclusão -->
<form asp-action="Delete" class="delete-form">
    <input type="hidden" asp-for="CategoriaId" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash"></i> Excluir
    </button>
    <a class="btn btn-secondary" asp-action="Index">
        <i class="fas fa-arrow-left"></i> Voltar para a lista
    </a>
</form>

<!-- CSS -->
<style>
    body {
        background-color: #f8f9fc;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .page-title {
        text-align: center;
        margin-top: 40px;
        font-size: 36px;
        color: black;
        font-weight: bold;
    }

    .confirmation-title {
        text-align: center;
        margin-top: 20px;
        font-size: 24px;
        color: #e74a3b;
    }

    .category-details {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-top: 30px;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .category-name {
        font-size: 26px;
        color: #6a0dad;
        display: flex;
        align-items: center;
    }

    .category-name i {
        margin-right: 10px;
    }

    .category-label {
        font-weight: bold;
        color: #333;
    }

    .category-value {
        color: #555;
    }

    .delete-form {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        transition: background 0.3s ease;
    }

    .btn-danger {
        background-color: #e74a3b;
        color: white;
        border: none;
    }

    .btn-danger:hover {
        background-color: #c0392b;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .btn i {
        margin-right: 5px;
    }
</style>
