@model MoonstoneTCC.Models.Categoria

@{
    ViewData["Title"] = "Criar Categoria";
}

<h1>CRIAR CATEGORIA</h1>

<h4>Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoriaNome" class="control-label"></label>
                <input asp-for="CategoriaNome" class="form-control" />
                <span asp-validation-for="CategoriaNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="cc">
                <input type="submit" value="CRIAR" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">
        <i class="fas fa-arrow-left"></i> VOLTAR PARA A LISTA
    </a>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f7fc;
        color: #333;
    }

    /* Título principal */
    h1 {
        font-size: 2.5rem;
        color: black;
        text-align: center;
        margin-bottom: 1rem;
    }

    /* Subtítulo */
    h4 {
        font-size: 1.5rem;
        color: black;
        margin-bottom: 1rem;
    }

    /* Separador entre título e formulário */
    hr {
        border: 0;
        border-top: 2px solid #6a0dad;
        margin-bottom: 1.5rem;
    }

    /* Estilo do formulário */
    .form-group {
        margin-bottom: 1.5rem;
    }

    /* Labels */
    .control-label {
        font-weight: bold;
        color: black; /* Cor do texto, pois o fundo agora é um gradiente */
    }

    /* Campos de entrada */
    input.form-control {
        width: 100%;
        padding: 0.8rem;
        border-radius: 4px;
        border: 1px solid #6a0dad;
        background-color: #fff;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

        /* Foco nos campos de entrada */
        input.form-control:focus {
            border-color: #6a0dad;
            outline: none;
        }

    /* Mensagens de validação */
    .text-danger {
        font-size: 0.875rem;
        color: #f44336;
    }

    /* Botão de submit */
    input[type="submit"] {
        background-color: #4CAF50;
        color: #fff;
        font-size: 1rem;
        padding: 0.8rem 1.5rem;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        /* Efeito de hover no botão */
        input[type="submit"]:hover {
            background-color: #45a049;
        }

   

        a:hover {
            text-decoration: underline;
        }

    /* Layout da página */
    .row {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
    }

    .col-md-4 {
        width: 100%;
        max-width: 500px;
        padding: 0 1rem;
    }

</style>