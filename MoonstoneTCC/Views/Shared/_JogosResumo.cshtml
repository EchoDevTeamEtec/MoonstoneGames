@model Jogo

<div class="col">
    <div class="card h-100 shadow-lg" style="background-color: #F5FDFF; border: none; border-radius: 15px; overflow: hidden;">
        <!-- Imagem principal com proporção fixa -->
        <a asp-controller="Jogo" asp-action="Details" asp-route-jogoId="@Model.JogoId" class="text-decoration-none">
            <div class="position-relative">
                <!-- Imagem do jogo -->
                <img src="@Model.ImagemUrl" alt="@Model.Nome" class="card-img-top img-fluid" style="aspect-ratio: 4 / 5; object-fit: cover;">

                <!-- Classificação etária no canto superior direito -->
                <div class="position-absolute top-0 end-0 m-2">
                    <img src="@Model.ClassificacaoEtariaImagemUrl" alt="Classificação Etária" class="rounded-circle border border-dark" style="width: 50px; height: 50px; object-fit: cover;">
                </div>
            </div>
        </a>
        <div class="card-body d-flex flex-column p-3">
            <!-- Nome do jogo com link -->
            <h5 class="card-title text-center fw-bold text-dark mb-2">
                <a asp-controller="Jogo" asp-action="Details" asp-route-jogoId="@Model.JogoId" class="text-dark text-decoration-none">
                    @Model.Nome
                </a>
            </h5>

            <!-- Informações sobre o jogo: Gênero e Plataformas -->
            <div class="card-text text-center mb-2">
                <!-- Gênero e Plataformas -->
                <p class="text-secondary" style="font-size: 0.95rem;">
                    <span class="d-inline-block mb-1">
                        <i class="fa-solid fa-gamepad me-2"></i>
                        <a asp-controller="Jogo" asp-action="Details" asp-route-jogoId="@Model.JogoId" class="text-dark text-decoration-none">
                            @Model.Genero
                        </a>
                    </span>
                    <span class="d-inline-block mb-1">
                        <i class="fa-solid fa-laptop me-2"></i>
                        <a asp-controller="Jogo" asp-action="Details" asp-route-jogoId="@Model.JogoId" class="text-dark text-decoration-none">
                            @Model.Plataformas
                        </a>
                    </span>
                </p>
            </div>

            <!-- Preço (aproximado do botão) -->
            <p class="fw-bold text-dark text-center mb-3" style="font-size: 1.1rem;">
                <a asp-controller="Jogo" asp-action="Details" asp-route-jogoId="@Model.JogoId" class="text-dark text-decoration-none">
                    @Model.Preco.ToString("c")
                </a>
            </p>
        </div>

        <!-- Botão "Adicionar ao Carrinho" (ajustado para mais próximo do preço) -->
        <div class="card-footer bg-light text-center border-top-0 p-3">
            <a class="btn btn-primary w-100 d-flex align-items-center justify-content-center"
               id="cartButton"
               asp-controller="CarrinhoCompra"
               asp-action="AdicionarItemNoCarrinhoCompra"
               asp-route-JogoId="@Model.JogoId"
               title="Adicionar ao Carrinho">
                <i class="fa-solid fa-cart-plus me-2"></i> Adicionar ao Carrinho
            </a>
        </div>



    </div>
</div>

<!-- CSS Personalizado -->
<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

    .btn-primary {
        background-color: #007bff;
        border: none;
        font-weight: bold;
        font-size: 1rem;
        padding: 0.6rem 1rem;
        border-radius: 8px;
        margin-top: -40px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .card-footer {
        padding: 0.8rem 1rem;
    }

    .card-text {
        margin: 0;
    }

        .card-text a {
            transition: color 0.2s ease;
        }

            .card-text a:hover {
                color: #0056b3; /* Azul ao passar o mouse */
            }

    .fa-gamepad, .fa-laptop {
        color: #6c757d; /* Ícones com cor secundária */
    }

    .card-body {
        padding: 10rem 3.5rem; /* Ajuste de padding para aproximar as informações */
    }
</style>
